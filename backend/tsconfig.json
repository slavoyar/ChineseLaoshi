{
  "compilerOptions": {
    "target": "es2020",

    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "@types"
    ],
    "paths": {
      "@*": ["./src/*"],
    },
  },
  "include": [
    "@types/**/*.d.ts",
    "./src/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
